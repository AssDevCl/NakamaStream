<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - NakamaStream</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <style>
        .anime-bg {
            background-image: url('https://example.com/path-to-anime-background.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }
        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.18);
        }
        .hover-scale {
            transition: transform 0.3s ease;
        }
        .hover-scale:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body class="bg-gray-900 font-nunito anime-bg text-white">
    <nav class="bg-indigo-900 bg-opacity-80 p-4 sticky top-0 z-50 animate__animated animate__fadeInDown">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600">
                NakamaStream Admin
            </h1>
            <div>
                <span class="mr-4">Bienvenido, <%= username %></span>
                <a href="/anime" class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105">
                    Volver al sitio
                </a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto mt-8 p-4">
        <h2 class="text-4xl font-bold mb-6 text-center animate__animated animate__fadeInUp">Gestión de Animes</h2>
        
        <a href="/anime/upload" class="bg-gradient-to-r from-green-400 to-blue-500 hover:from-green-500 hover:to-blue-600 text-white font-bold py-2 px-6 rounded-full mb-6 inline-block transition duration-300 ease-in-out transform hover:scale-105 animate__animated animate__fadeInLeft">
            Subir Nuevo Anime
        </a>

        <div class="glass-effect p-6 animate__animated animate__fadeIn" data-aos="fade-up">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-800 text-gray-300">
                    <tr>
                        <th class="py-3 px-4 text-left">Nombre</th>
                        <th class="py-3 px-4 text-left">Imagen</th>
                        <th class="py-3 px-4 text-left">Descripción</th>
                        <th class="py-3 px-4 text-left">Acciones</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700">
                    <% animes.forEach(anime => { %>
                        <tr class="hover:bg-gray-800 transition-colors duration-200">
                            <td class="py-3 px-4"><%= anime.name %></td>
                            <td class="py-3 px-4">
                                <img src="<%= anime.imageUrl %>" alt="<%= anime.name %>" class="w-20 h-20 object-cover rounded-lg hover-scale">
                            </td>
                            <td class="py-3 px-4"><%= anime.description.substring(0, 100) %>...</td>
                            <td class="py-3 px-4">
                                <a href="/admin/animes/edit/<%= anime.id %>" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-3 rounded-full mr-2 transition duration-300 ease-in-out transform hover:scale-105">
                                    Editar
                                </a>
                                <button onclick="deleteAnime(<%= anime.id %>)" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded-full transition duration-300 ease-in-out transform hover:scale-105">
                                    Eliminar
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        AOS.init({
            duration: 1000,
            once: true,
        });

        function deleteAnime(animeId) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "No podrás revertir esta acción!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminar!',
                cancelButtonText: 'Cancelar',
                background: '#1a202c',
                color: '#ffffff'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/animes/delete/${animeId}`, {
                        method: 'POST',
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Eliminado!',
                                text: 'El anime ha sido eliminado.',
                                icon: 'success',
                                background: '#1a202c',
                                color: '#ffffff'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: 'No se pudo eliminar el anime.',
                                icon: 'error',
                                background: '#1a202c',
                                color: '#ffffff'
                            });
                        }
                    });
                }
            });
        }
    </script>
</body>
</html>