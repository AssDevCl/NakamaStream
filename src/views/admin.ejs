<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NakamaStream - Admin Panel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/src/public/css/admin.css">
</head>
<body>
    <div class="container">
        <% if (req.session.isAdmin) { %>
            <div class="admin-header">
                <div class="admin-name">
                    Welcome, <%= req.session.username %>
                </div>
                <div class="admin-actions">
                    <a href="/dashboard" class="button is-primary">Go to Dashboard</a>
                </div>
            </div>
            <h1 class="title">Admin Panel</h1>
            <% if (users) { %>
                <div class="table-container">
                    <table class="table is-fullwidth">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.id %></td>
                                    <td><%= user.username %></td>
                                    <td><%= user.email %></td>
                                    <td>
                                        <% if (user.isAdmin) { %>
                                            <span class="tag is-admin">Admin</span>
                                        <% } else { %>
                                            <span class="tag is-novice">Novice</span>
                                        <% } %>
                                        <% if (user.isBanned) { %>
                                            <span class="tag is-banned">Banned</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="field is-grouped">
                                            <div class="control">
                                                <form action="/admin/delete-user" method="POST">
                                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                                    <button class="button is-danger is-small">Delete</button>
                                                </form>
                                            </div>
                                            <div class="control">
                                                <form action="/admin/ban-user" method="POST" class="ban-form">
                                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                                    <div class="select is-small">
                                                        <select name="banType">
                                                            <option value="temporary">Temporary</option>
                                                            <option value="permanent">Permanent</option>
                                                        </select>
                                                    </div>
                                                    <input type="number" name="banDuration" placeholder="Days" required>
                                                    <button class="button is-warning is-small">Ban</button>
                                                </form>
                                            </div>
                                            <div class="control">
                                                <form action="/admin/unban-user" method="POST">
                                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                                    <button class="button is-success is-small">Unban</button>
                                                </form>
                                            </div>
                                            <div class="control">
                                                <form action="/admin/promote-user" method="POST">
                                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                                    <button class="button is-primary is-small">Promote</button>
                                                </form>
                                            </div>
                                            <div class="control">
                                                <form action="/admin/demote-user" method="POST">
                                                    <input type="hidden" name="userId" value="<%= user.id %>">
                                                    <button class="button is-warning is-small">Demote</button>
                                                </form>
                                            </div>
                                            <div class="control">
                                                <button class="button is-primary is-small" onclick="showUpdateModal('<%= user.id %>', '<%= user.username %>', '<%= user.email %>')">Update</button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p>No users found.</p>
            <% } %>

            <h2 class="title">Add Admin User</h2>
            <button class="button is-primary" onclick="showAddAdminModal()">Add Admin</button>

            <div id="addAdminModal" class="modal">
                <div class="modal-content">
                    <form action="/admin/add-admin" method="POST">
                        <div class="field">
                            <label class="label">Username</label>
                            <div class="control">
                                <input class="input" type="text" name="username" placeholder="Username" required>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Email</label>
                            <div class="control">
                                <input class="input" type="email" name="email" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Password</label>
                            <div class="control">
                                <input class="input" type="password" name="password" placeholder="Password" required>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button class="button is-primary" type="submit">Add Admin</button>
                                <button class="button" type="button" onclick="hideModal('addAdminModal')">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div id="updateModal" class="modal">
                <div class="modal-content">
                    <form action="/admin/update-user" method="POST">
                        <input type="hidden" id="updateUserId" name="userId">
                        <div class="field">
                            <label class="label">Username</label>
                            <div class="control">
                                <input class="input" id="updateUsername" type="text" name="username" placeholder="Username" required>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Email</label>
                            <div class="control">
                                <input class="input" id="updateEmail" type="email" name="email" placeholder="Email" required>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Password</label>
                            <div class="control">
                                <input class="input" type="password" name="password" placeholder="Password" required>
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button class="button is-primary" type="submit">Update</button>
                                <button class="button" type="button" onclick="hideModal('updateModal')">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        <% } else { %>
            <p>You don't have admin permissions.</p>
        <% } %>
    </div>

    <script src="/src/public/js/addAdminModal.js"></script>
</body>
</html>
