<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Anime</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8">Upload a new Anime</h1>
        <form action="/anime/upload" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
                    Name
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="name" type="text" name="name" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="imageUrl">
                    Image URL
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="imageUrl" type="url" name="imageUrl" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="description">
                    Description
                </label>
                <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="description" name="description" rows="3" required></textarea>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="episodes">
                    Episodes (comma-separated)
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="episodes" type="text" name="episodes" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="videoUrl">
                    Video URL
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="videoUrl" type="url" name="videoUrl">
                <button type="button" id="previewButton" class="mt-2 bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Preview Video
                </button>
            </div>
            <div id="videoPreview" class="mb-4 hidden">
                <h3 class="text-lg font-semibold mb-2">Video Preview</h3>
                <div class="aspect-w-16 aspect-h-9">
                    <iframe id="videoFrame" src="" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen class="w-full h-full"></iframe>
                </div>
            </div>
            <div class="flex items-center justify-between">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Upload Anime
                </button>
                <a href="/anime" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                    Back to Anime List
                </a>
            </div>
        </form>
    </div>

    <script>
        document.getElementById('previewButton').addEventListener('click', function() {
            const videoUrl = document.getElementById('videoUrl').value;
            const videoFrame = document.getElementById('videoFrame');
            const videoPreview = document.getElementById('videoPreview');

            if (videoUrl) {
                videoFrame.src = videoUrl;
                videoPreview.classList.remove('hidden');
            } else {
                alert('Please enter a valid video URL');
            }
        });
    </script>
</body>
</html>